<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueDark"
        android:padding="16dp"
        tools:context=".ui.MainActivity">
        
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/options"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_menu_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoriesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <RelativeLayout
                    android:id="@+id/section1RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/section1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:id="@+id/section1Expand"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        android:layout_alignParentEnd="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/section1RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/section1Expand"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <RelativeLayout
                    android:id="@+id/section2RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/section2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:id="@+id/section2Expand"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        android:layout_alignParentEnd="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/section2RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/section2Title"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <RelativeLayout
                    android:id="@+id/section3RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/section3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:id="@+id/section3Expand"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        android:layout_alignParentEnd="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/section3RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/section3Title"/>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/background_music_gradient"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/songCoverImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/songTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playing..."
                android:textColor="@color/white"
                android:layout_toEndOf="@id/songCoverImageView"
                android:paddingStart="16dp"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>
        </RelativeLayout>


    </RelativeLayout>
</layout>